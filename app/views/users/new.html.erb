<h1>Sign up</h1>

<h2 class="text-center margin-header">Create a new user :</h2>
<div class="container margin-header">
	<%= form_for(@user, url: signup_path) do |f| %>
		<strong><%= f.label :email %></strong><br />
		<%= f.email_field :email, placeholder: "Your email" %>
    <strong><%= f.label :password %></strong><br />
		<%= f.password_field :password, placeholder: "Your password" %>
		<strong><%= f.label :password_confirmation %></strong><br />
		<%= f.password_field :password_confirmation, placeholder: "Confirm your password", size: "60x10" %>
		<%= f.submit "Submit" %>
	<% end %>
</div>

<a href="/">Back</a>
